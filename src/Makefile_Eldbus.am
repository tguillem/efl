
### Library

eldbus_eolian_files = \
	lib/eldbus/eldbus_model_connection.eo \
	lib/eldbus/eldbus_model_object.eo \
	lib/eldbus/eldbus_model_proxy.eo \
	lib/eldbus/eldbus_model_method.eo \
	lib/eldbus/eldbus_model_arguments.eo \
