eldbuseolianfiles_DATA = $(eldbus_eolian_files)

EXTRA_DIST += \
	${eldbuseolianfiles_DATA}

lib_LTLIBRARIES += lib/eldbus/libeldbus.la

installed_eldbusmainheadersdir = $(includedir)/eldbus-@VMAJ@
